{% extends 'base.html.twig' %}

{% block title %}{{ pageName }} - {{ brand }}{% endblock %}

{% block body %}
<div class="siteContent mx-auto text-center">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="h3 mb-3 font-weight-normal">{{ pageName }}</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.repeatPassword) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-login mt-3">{{ pageName }}</button>
    {{ form_end(registrationForm) }}
</div>          
{% endblock %}
